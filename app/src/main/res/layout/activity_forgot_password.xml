<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/textBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/forgot_password_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <ImageButton
            android:id="@+id/close_forgot_password_btn"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_height="@dimen/back_button_size"
            android:layout_width="@dimen/back_button_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:src="@drawable/left_arrow_white" />


        <TextView
            android:id="@+id/forgot_password_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="Forgot?"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <TextView
        android:id="@+id/confirmation_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="30dp"
        android:autofillHints="Email Address"
        android:hint="Update Email"
        android:visibility="gone" />


    <EditText
        android:id="@+id/email_reset_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="30dp"
        android:autofillHints="Email Address"
        android:hint="Email"
        style="@style/TransaparentWithBorderEditTextTheme"
        android:paddingStart="12dp"
        android:visibility="visible"
        android:inputType="textEmailAddress" tools:targetApi="o" />


    <Button
        android:id="@+id/email_reset_btn"
        style="@style/WhiteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_reset_tv"
        android:layout_alignEnd="@id/email_reset_tv"
        android:layout_marginEnd="10dp"
        android:elevation="2dp"
        android:padding="5dp"
        android:text="Send Reset Email"
        android:textColor="@color/placeholderColor"
        android:textAllCaps="false"

        />


</RelativeLayout>